
<h1 class="page-header" align="center">Games</h1>

<div class="container">
  <% @games.each do |game| %>
    <div class="card text-center border-dark mb-5" >
      
      <div class="card-header bg-info">
        <h2 class="" style="color:white;"><%= game.title%></h2>
      </div>
      
      <div class="card-body">
        <img class="card-img-top" width="400" height="275" src=<%= game.image_file %> alt="Card image cap">
      </div>

      <div class="card-footer text-muted">
        <a href="/games/<%= game.id %>" class="btn btn-block btn-primary"><h3>More Details</h3></a>
      </div>
    </div>

  <% end %>
</div>
